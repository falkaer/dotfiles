#!/bin/bash

if [ -d ~/miniconda3 ]; then
    source ~/miniconda3/etc/profile.d/conda.sh
else
    source ~/anaconda3/etc/profile.d/conda.sh
fi

conda activate ~/venv/data && python3 "$@" -i -c "import numpy as np; import pandas as pd; import torch; import torch.nn as nn; import torch.nn.functional as F;"
